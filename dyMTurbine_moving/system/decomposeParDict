FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 16;

method          multiRegion; // Use multiRegion for overset

regions
{
    // How to decompose the background
    region0
    {
        numberOfSubdomains 16;
        method          hierarchical;
        coeffs
        {
            n           (8 2 1); // Your original (3 1 1) split
        }
    }

    // How to decompose the moving zone
    movingZone1 // <-- This MUST match your cellZone name
    {
        numberOfSubdomains 16;
        method          hierarchical;
        coeffs
        {
            n           (8 2 1); // Split this region the same way
        }
    }
}

